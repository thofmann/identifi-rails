<div id="search-page" class="mar-top60-xs">
<% unless current_user || params[:query] %>
  <%=	render 'landing_page' %>
<% end %>

<table id="search-results" class="table table-hover">
<% @results.each do |r| %>
  <tr class="search-result-row">
    <td><img alt="" src="https://www.gravatar.com/avatar/<%= r["gravatarHash"] %>?d=retro&s=30"></td>
    <td><a href="/id/<%=u r["type"] %>/<%=u r["value"] %>"><%= unless r["name"].empty?
                                                              r["name"]
                                                             else 
                                                               r["value"] 
                                                             end %></a><br>
                                                           <small><%= r["type"] %><%= ": #{r["value"]}" unless r["name"].empty? %></small>
    </td>
  </tr>
<% end %>
<% if @results.empty? %>
<tr><td>No results</td><td></td></tr>
<% end %>
</table>
</div>

