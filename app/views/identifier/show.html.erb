<div class="row"><div class="col-lg-12">
<h3 class="hidden-xs"><span id="id-value"><%= params[:value] %></span>
  <small class="text-muted">
    <% if params[:type] == "bitcoin_address" %>
      <a href="http://blockchain.info/address/<%= params[:value] %>">
        <span id="id-type"><%= params[:type] %></span>
      </a>
    <% elsif params[:type] == "url" %>
      <a href="<%= params[:value] %>">
        <span id="id-type"><%= params[:type] %></span>
      </a>
    <% else %>
      <span id="id-type"><%= params[:type] %></span>
    <% end %>
  </small>
</h3>
</div></div>

