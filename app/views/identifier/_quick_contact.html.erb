  <% quickcontacts = @connections.clone
  quickcontacts.insert(0, { "type" => params[:type], "value" => params[:value], "refutations" => 0, "confirmations" => 1 })
  %>
<% quickcontacts.each do |c| %>
  <% if c["refutations"] * 2  < c["confirmations"] %>
    <% case c["type"] %>
    <% when "email" %>
      <a class="btn btn-lg btn-social-icon btn-success" href="mailto:<%= c["value"] %>"><span class="glyphicon glyphicon-envelope"></span>&nbsp;</a> 
    <% when "url" %>
      <% if c["value"].include? "facebook.com/" %>
        <a class="btn btn-lg btn-social-icon btn-facebook" href="<%= c["value"] %>"><span class="fa fa-facebook"></span></a> 
      <% elsif c["value"].include? "://twitter.com/" %>
        <a class="btn btn-lg btn-social-icon btn-twitter" href="<%= c["value"] %>"><span class="fa fa-twitter"></span>&nbsp;</a> 
      <% elsif c["value"].include? "://plus.google.com/" %>
        <a class="btn btn-lg btn-social-icon btn-google-plus" href="<%= c["value"] %>"><span class="fa fa-google-plus"></span></a> 
      <% elsif c["value"].include? ".linkedin.com/" %>
        <a class="btn btn-lg btn-social-icon btn-linkedin" href="<%= c["value"] %>"><span class="fa fa-linkedin"></span></a> 
      <% elsif c["value"].include? "instagram.com/" %>
        <a class="btn btn-lg btn-social-icon btn-instagram" href="<%= c["value"] %>"><span class="fa fa-instagram"></span></a> 
      <% end %>
    <% when "phone" %>
      <a class="btn btn-lg btn-social-icon btn-success" href="tel:<%= c["value"] %>"><span class="glyphicon glyphicon-earphone"></span></a>
    <% when "bitcoin", "bitcoin_address" %>
      <a class="btn btn-lg btn-social-icon btn-primary" href="https://blockchain.info/address/<%=u c["value"] %>"><span class="fa fa-bitcoin"></span></a>
    <% end %>
  <% end %>
<% end %>
